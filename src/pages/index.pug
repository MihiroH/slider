extends /pages/_template

block var
  - fileName = 'index'

block link
  link(rel="stylesheet" href=`${cssPath}/slider.css?${TIMESTAMP}`)

block contents
  .slider
    .slider-inner
      .slider-container
        .slider-list
          .slider-item slide1
          .slider-item slide2
          .slider-item slide3
        button.slider-button-prev
        button.slider-button-next
        .slider-pagination

block bodyEnd
  script(src=`${jsPath}/slider.js` defer)
  script(src=`${jsPath}/script.js` defer)
